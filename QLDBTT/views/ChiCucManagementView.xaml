<UserControl x:Class="Disease_Disaster.Views.ChiCucManagementView"

             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             Background="White" Height="650" Width="1100">

	<Grid Margin="20">

		<Grid.ColumnDefinitions>

			<ColumnDefinition Width="350"/>

			<ColumnDefinition Width="*"/>

		</Grid.ColumnDefinitions>



		<Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="0,0,1,0" Padding="0,0,15,0">

			<Grid>

				<Grid.RowDefinitions>

					<RowDefinition Height="Auto"/>

					<RowDefinition Height="*"/>

				</Grid.RowDefinitions>



				<TextBlock Text="DANH SÁCH CHI CỤC THÚ Y" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>



				<DataGrid x:Name="dgChiCuc" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 

                          BorderBrush="#BDC3C7" BorderThickness="1" HeadersVisibility="Column"

                          SelectionMode="Single" SelectionChanged="dgChiCuc_SelectionChanged" 

                          RowHeight="40"

                          VerticalAlignment="Top"

                          CanUserAddRows="False">

					<DataGrid.Columns>

						<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>

						<DataGridTextColumn Header="Tên Chi Cục Vùng" Binding="{Binding Ten}" Width="*"/>

					</DataGrid.Columns>

				</DataGrid>

			</Grid>

		</Border>



		<Grid Grid.Column="1" Margin="20,0,0,0">

			<Grid.RowDefinitions>

				<RowDefinition Height="Auto"/>

				<RowDefinition Height="*"/>

				<RowDefinition Height="Auto"/>

			</Grid.RowDefinitions>



			<StackPanel Grid.Row="0" Margin="0,0,0,15">

				<TextBlock Text="ĐỊA BÀN QUẢN LÝ (Cấp Tỉnh/Thành)" FontSize="18" FontWeight="Bold" Foreground="#E67E22"/>

				<StackPanel Orientation="Horizontal" Margin="0,5,0,0">

					<TextBlock Text="Đang xem:" Foreground="Gray"/>

					<TextBlock x:Name="lblSelectedChiCuc" Text="..." FontWeight="Bold" Margin="5,0,0,0" Foreground="#2980B9"/>

				</StackPanel>

			</StackPanel>



			<DataGrid x:Name="dgProvinces" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 

                      BorderBrush="#BDC3C7" BorderThickness="1" RowHeight="35" CanUserAddRows="False">

				<DataGrid.Columns>

					<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>

					<DataGridTextColumn Header="Tên Tỉnh/Thành phố" Binding="{Binding Ten}" Width="200" FontWeight="Bold"/>

					<DataGridTextColumn Header="Cấp" Binding="{Binding TenHanhChinh}" Width="120"/>



					<DataGridTemplateColumn Header="Tác vụ" Width="100">

						<DataGridTemplateColumn.CellTemplate>

							<DataTemplate>

								<Button Content="Gỡ bỏ" Background="#E74C3C" Foreground="White" Padding="5,0" Click="btnRemove_Click"/>

							</DataTemplate>

						</DataGridTemplateColumn.CellTemplate>

					</DataGridTemplateColumn>

				</DataGrid.Columns>

			</DataGrid>



			<Border Grid.Row="2" Background="#ECF0F1" Padding="10" Margin="0,15,0,0" CornerRadius="5">

				<StackPanel Orientation="Horizontal">

					<TextBlock Text="Thêm Tỉnh vào Chi cục này:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>

					<ComboBox x:Name="cbAvailableProv" Width="250" Height="30" DisplayMemberPath="Ten" SelectedValuePath="Id" 

                              ToolTip="Chỉ hiển thị các tỉnh chưa có Chi cục quản lý"/>

					<Button Content="➕ Thêm Ngay" Width="100" Height="30" Margin="10,0,0,0" 

                            Background="#27AE60" Foreground="White" Click="btnAdd_Click"/>

				</StackPanel>

			</Border>

		</Grid>

	</Grid>

</UserControl>