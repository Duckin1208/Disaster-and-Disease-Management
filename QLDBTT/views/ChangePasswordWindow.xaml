<Window x:Class="Disease_Disaster.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi mật khẩu hệ thống" Height="400" Width="480" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F4F7F6">

	<Grid Margin="30">
		<StackPanel>
			<TextBlock Text="ĐỔI MẬT KHẨU" FontSize="22" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#2980B9"/>

			<TextBlock Text="Mật khẩu cũ:" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<PasswordBox x:Name="txtOldPass" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

			<TextBlock Text="Mật khẩu mới:" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<PasswordBox x:Name="txtNewPass" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

			<TextBlock Text="Xác nhận mật khẩu mới:" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<PasswordBox x:Name="txtConfirmPass" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,25"/>

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Button Content="Lưu thay đổi" Grid.Column="0" Margin="0,0,10,0" 
                        Height="40" Background="#27AE60" Foreground="White" 
                        FontWeight="Bold" Cursor="Hand" Click="btnSave_Click">
					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="5"/>
						</Style>
					</Button.Resources>
				</Button>

				<Button Content="Hủy bỏ" Grid.Column="1" Margin="10,0,0,0" 
                        Height="40" Background="#BDC3C7" Foreground="Black"
                        FontWeight="Bold" Cursor="Hand" Click="btnCancel_Click">
					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="5"/>
						</Style>
					</Button.Resources>
				</Button>
			</Grid>
		</StackPanel>
	</Grid>
</Window>