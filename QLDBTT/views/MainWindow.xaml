<Window x:Class="Disease_Disaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hệ thống Quản lý Dịch bệnh &amp; Thiên tai" 
        Height="900" Width="1600"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">

	<Window.Resources>
		<Style x:Key="MenuButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="Height" Value="45"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="HorizontalContentAlignment" Value="Left"/>
			<Setter Property="Padding" Value="20,0,0,0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" BorderThickness="0">
							<ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#34495E"/>
					<Setter Property="Foreground" Value="#ECF0F1"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="260"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Border Background="#2C3E50" Grid.Column="0">
			<DockPanel>
				<StackPanel DockPanel.Dock="Top" Margin="20">
					<Border Width="70" Height="70" CornerRadius="35" Background="#ECF0F1" Margin="0,0,0,10" HorizontalAlignment="Center">
						<TextBlock Text="👤" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#7F8C8D"/>
					</Border>
					<TextBlock x:Name="txtUserFullName" Text="Tên Người Dùng" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
					<TextBlock x:Name="txtUserRole" Text="Vai trò: ..." Foreground="#BDC3C7" HorizontalAlignment="Center" Margin="0,5,0,10"/>

					<Button x:Name="btnChangePass" Content="🔑 Đổi mật khẩu" Background="Transparent" Foreground="#3498DB" 
                            BorderThickness="0" Cursor="Hand" FontSize="12" Margin="0,0,0,10" Click="btnChangePass_Click"/>

					<Border Background="#34495E" CornerRadius="15" Padding="15,6" HorizontalAlignment="Center">
						<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
							<Ellipse x:Name="statusDot" Width="10" Height="10" Fill="#2ECC71" Margin="0,0,8,0"/>
							<TextBlock x:Name="txtStatus" Text="Đang hoạt động" Foreground="#2ECC71" FontSize="12" FontWeight="SemiBold"/>
						</StackPanel>
					</Border>
				</StackPanel>

				<Button DockPanel.Dock="Bottom" Click="btnLogout_Click" Background="#C0392B" Foreground="White" Height="50" BorderThickness="0" Cursor="Hand">
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="🚪" Margin="0,0,10,0"/>
						<TextBlock Text="Đăng xuất hệ thống" FontWeight="Bold"/>
					</StackPanel>
				</Button>

				<StackPanel Margin="0,20">
					<TextBlock Text="HỆ THỐNG" Foreground="#95A5A6" FontSize="12" Margin="20,0,0,10" FontWeight="SemiBold"/>
					<Button x:Name="btnUserMgmt" Content="👥  Quản lý Người dùng" Style="{StaticResource MenuButtonStyle}" Click="NavUser_Click"/>
					<Button x:Name="btnLogs" Content="📜  Nhật ký hệ thống" Style="{StaticResource MenuButtonStyle}" Click="NavLogs_Click"/>

					<Separator Background="#34495E" Margin="20,10,20,10"/>

					<TextBlock Text="NGHIỆP VỤ" Foreground="#95A5A6" FontSize="12" Margin="20,10,0,10" FontWeight="SemiBold"/>
					<Button Content="🏢  Đơn vị Hành chính" Style="{StaticResource MenuButtonStyle}" Click="NavAdmin_Click"/>
					<Button Content="🌪️  Quản lý Thiên tai" Style="{StaticResource MenuButtonStyle}" Click="NavDisaster_Click"/>
					<Button Content="🦠  Quản lý Dịch bệnh" Style="{StaticResource MenuButtonStyle}" Click="NavDisease_Click"/>
					<Button Content="🐄  Quản lý Chăn nuôi" Style="{StaticResource MenuButtonStyle}" Click="NavVet_Click"/>
					<Button Content="🛡️  Vùng An Toàn Dịch Bệnh" Style="{StaticResource MenuButtonStyle}" Click="NavSafeZone_Click"/>
					<Button Content="🏢  Quản lý Chi Cục Thú Y" Style="{StaticResource MenuButtonStyle}" Click="NavChiCuc_Click"/>
				</StackPanel>
			</DockPanel>
		</Border>

		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="60"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Border Background="White" BorderBrush="#DCDDE1" BorderThickness="0,0,0,1">
				<Grid>
					<TextBlock x:Name="txtTitle" Text="Dashboard Tổng hợp" VerticalAlignment="Center" Margin="25,0" FontSize="20" FontWeight="SemiBold" Foreground="#2C3E50"/>
				</Grid>
			</Border>
			<ContentControl x:Name="MainContentFrame" Grid.Row="1" Margin="20"/>
		</Grid>
	</Grid>
</Window>