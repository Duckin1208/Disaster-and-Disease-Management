<Window x:Class="Disease_Disaster.Views.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cập nhật thông tin người dùng" Height="520" Width="420" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Border Padding="25" Background="#F4F6F6">
		<StackPanel>
			<TextBlock Text="CẬP NHẬT TÀI KHOẢN" FontSize="20" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,25"/>

			<TextBlock Text="Tên đăng nhập (Cố định):" FontWeight="SemiBold" Foreground="#7F8C8D"/>
			<TextBox x:Name="txtUsername" Height="35" Margin="0,5,0,12" 
                     VerticalContentAlignment="Center" Background="#ECF0F1" IsReadOnly="True" Padding="5,0"/>

			<TextBlock Text="Họ và tên (*):" FontWeight="SemiBold"/>
			<TextBox x:Name="txtFullName" Height="35" Margin="0,5,0,12" VerticalContentAlignment="Center" Padding="5,0"/>

			<TextBlock Text="Email:" FontWeight="SemiBold"/>
			<TextBox x:Name="txtEmail" Height="35" Margin="0,5,0,12" VerticalContentAlignment="Center" Padding="5,0"/>

			<TextBlock Text="Số điện thoại (*):" FontWeight="SemiBold"/>
			<TextBox x:Name="txtPhone" Height="35" Margin="0,5,0,12" VerticalContentAlignment="Center" Padding="5,0"/>

			<TextBlock Text="Phân quyền hệ thống:" FontWeight="SemiBold"/>
			<ComboBox x:Name="cbRole" Height="35" Margin="0,5,0,25" VerticalContentAlignment="Center">
				<ComboBoxItem Content="Cán bộ nghiệp vụ (Staff)" Tag="3"/>
				<ComboBoxItem Content="Quản trị hệ thống (Admin)" Tag="2"/>
				<ComboBoxItem Content="Lập trình viên (Developer)" Tag="1"/>
			</ComboBox>

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Button Content="Lưu thay đổi" Grid.Column="0" Margin="0,0,8,0" 
                        Height="40" Background="#2980B9" Foreground="White" FontWeight="Bold" Click="btnUpdate_Click">
					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="4"/>
						</Style>
					</Button.Resources>
				</Button>
				<Button Content="Hủy bỏ" Grid.Column="1" Margin="8,0,0,0" 
                        Height="40" Background="#95A5A6" Foreground="White" Click="btnCancel_Click">
					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="4"/>
						</Style>
					</Button.Resources>
				</Button>
			</Grid>
		</StackPanel>
	</Border>
</Window>