<Window x:Class="Disease_Disaster.Views.UserAddDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm người dùng mới" Height="520" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Border Padding="20" Background="#F4F6F6">
		<StackPanel>
			<TextBlock Text="THÊM TÀI KHOẢN" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

			<TextBlock Text="Tên đăng nhập (*):" FontWeight="SemiBold"/>
			<TextBox x:Name="txtUsername" Height="30" Margin="0,5,0,10" VerticalContentAlignment="Center"/>

			<TextBlock Text="Mật khẩu (*):" FontWeight="SemiBold"/>
			<PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,10"/>

			<TextBlock Text="Họ và tên:" FontWeight="SemiBold"/>
			<TextBox x:Name="txtFullName" Height="30" Margin="0,5,0,10" VerticalContentAlignment="Center"/>

			<TextBlock Text="Email:" FontWeight="SemiBold"/>
			<TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,10" VerticalContentAlignment="Center"/>

			<TextBlock Text="Số điện thoại (*):" FontWeight="SemiBold"/>
			<TextBox x:Name="txtPhone" Height="30" Margin="0,5,0,10" VerticalContentAlignment="Center"/>

			<TextBlock Text="Phân quyền:" FontWeight="SemiBold"/>
			<ComboBox x:Name="cbRole" Height="30" Margin="0,5,0,20" SelectedIndex="0">
				<ComboBoxItem Content="Cán bộ nghiệp vụ (Staff)" Tag="3"/>
				<ComboBoxItem Content="Quản trị hệ thống (Admin)" Tag="2"/>
				<ComboBoxItem Content="Lập trình viên (Developer)" Tag="1"/>
			</ComboBox>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Content="Lưu lại" Width="100" Height="35" Background="#27AE60" Foreground="White" Click="btnSave_Click" Margin="0,0,10,0"/>
				<Button Content="Hủy bỏ" Width="100" Height="35" Background="#95A5A6" Foreground="White" Click="btnCancel_Click"/>
			</StackPanel>
		</StackPanel>
	</Border>
</Window>