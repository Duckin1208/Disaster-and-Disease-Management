<Window x:Class="Disease_Disaster.Views.AddDiseaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Loại Dịch Bệnh" Height="250" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid Margin="15">
		<StackPanel>
			<TextBlock Text="THÊM DANH MỤC BỆNH MỚI" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,15" Foreground="#2980B9"/>

			<Label Content="Tên dịch bệnh (*):"/>
			<TextBox x:Name="txtTen" Height="30" Margin="0,0,0,10" VerticalContentAlignment="Center"/>

			<Label Content="Mô tả / Ghi chú:"/>
			<TextBox x:Name="txtMoTa" Height="30" Margin="0,0,0,15" VerticalContentAlignment="Center"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Content="Lưu Lại" Width="100" Height="30" Background="#27AE60" Foreground="White" 
                        Click="btnSave_Click"/>
				<Button Content="Hủy Bỏ" Width="100" Height="30" Margin="10,0,0,0" IsCancel="True"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>