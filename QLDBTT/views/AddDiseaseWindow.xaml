<Window x:Class="Disease_Disaster.Views.AddDiseaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm loại bệnh mới" Height="300" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Border Padding="20" Background="#FDFEFE">
		<StackPanel>
			<TextBlock Text="THÊM LOẠI BỆNH" FontSize="18" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

			<TextBlock Text="Tên dịch bệnh (*):" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<TextBox x:Name="txtTen" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>

			<TextBlock Text="Mô tả chi tiết:" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<TextBox x:Name="txtMoTa" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top" Padding="5" Margin="0,0,0,20"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Content="Lưu lại" Width="100" Height="35" Background="#27AE60" Foreground="White" Click="btnSave_Click" Margin="0,0,10,0"/>
				<Button Content="Hủy bỏ" Width="100" Height="35" Background="#95A5A6" Foreground="White" IsCancel="True"/>
			</StackPanel>
		</StackPanel>
	</Border>
</Window>