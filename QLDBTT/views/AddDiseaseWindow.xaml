<Window x:Class="Disease_Disaster.Views.AddDiseaseTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Loại Bệnh Mới" Height="250" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid Margin="20">
		<StackPanel>
			<TextBlock Text="Tên loại bệnh:" FontWeight="Bold" Margin="0,0,0,5"/>
			<TextBox x:Name="txtTenBenh" Height="30" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

			<TextBlock Text="Mô tả (Tùy chọn):" FontWeight="Bold" Margin="0,0,0,5"/>
			<TextBox x:Name="txtMoTa" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,20"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Content="Hủy" Width="80" Height="30" Margin="0,0,10,0" Click="btnCancel_Click"/>
				<Button Content="Lưu" Width="80" Height="30" Background="#27AE60" Foreground="White" Click="btnSave_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>