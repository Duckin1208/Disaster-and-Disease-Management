<Window x:Class="Disease_Disaster.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký tài khoản" Height="550" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Border Padding="25" Background="#FDFEFE">
		<StackPanel>
			<TextBlock Text="ĐĂNG KÝ TÀI KHOẢN" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,25"/>

			<TextBlock Text="Họ và tên (*):" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<TextBox x:Name="txtFullName" Height="35" Margin="0,0,0,15" VerticalContentAlignment="Center" Padding="5,0"/>

			<TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<TextBox x:Name="txtEmail" Height="35" Margin="0,0,0,15" VerticalContentAlignment="Center" Padding="5,0"/>

			<TextBlock Text="Số điện thoại (*):" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<TextBox x:Name="txtPhone" Height="35" Margin="0,0,0,15" VerticalContentAlignment="Center" Padding="5,0"/>

			<TextBlock Text="Tên đăng nhập (*):" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<TextBox x:Name="txtUsername" Height="35" Margin="0,0,0,15" VerticalContentAlignment="Center" Padding="5,0"/>

			<TextBlock Text="Mật khẩu (*):" FontWeight="SemiBold" Margin="0,0,0,5"/>
			<PasswordBox x:Name="txtPassword" Height="35" Margin="0,0,0,25" VerticalContentAlignment="Center" Padding="5,0"/>

			<Button Content="Đăng ký ngay" Height="40" Background="#27AE60" Foreground="White" FontWeight="Bold" Click="btnRegister_Click">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>

			<Button Content="Quay lại đăng nhập" Margin="0,15,0,0" Background="Transparent" BorderThickness="0" Foreground="#2980B9" Click="btnBack_Click"/>
		</StackPanel>
	</Border>
</Window>